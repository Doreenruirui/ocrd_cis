{
		"git_url": "https://github.com/cisocrgroup/cis-ocrd-py",
		"version": "0.0.1",
		"tools": {
				"ocrd-cis-align": {
						"executable": "ocrd-cis-align",
						"categories": [
								"Text recognition and optimization"
						],
						"steps": [
								"postprocessing/alignment"
						],
						"description": "Align multiple OCRs and/or GTs",
						"parameters": {
								"cisOcrdJar": {
										"type": "string",
										"required": true
								}
						}
				},
				"cis-ocrd-ocropy-recognize": {
					"executable": "cis-ocrd-ocropy-recognize",
					"categories": [
							"Text recognition and optimization"
					],
					"steps": [
							"postprocessing/alignment"
					],
					"description": "Recognize text in lines with ocropy",
					"parameters": {
						"textequiv_level": {
							"type": "string",
							"enum": ["page", "region", "line", "word", "glyph"],
							"default": "line"
						  },
						  "model": {
							"type": "string",
							"description": "ocropy model to apply (e.g. fraktur.pyrnn)"
						  }
					}
			},
				"ocrd-cis-profile": {
						"executable": "ocrd-cis-profile",
						"categories": [
								"Text recognition and optimization"
						],
						"steps": [
								"postprocessing/alignment"
						],
						"description": "Add correction suggestions to suspicious tokens",
						"parameters": {
								"cisOcrdJar": {
										"type": "string",
										"required": true
								},
								"profilerExecutable": {
										"type": "string",
										"required": true
								},
								"profilerBackend": {
										"type": "string",
										"required": true
								},
								"profilerLanguage": {
										"type": "string",
										"required": true
								}
						}
				}
		}
}
